<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Category">

	<select id="selectAll" resultType="Category">
		select * from category order by category_idx asc
	</select>
	
	<select id="select" parameterType="int" resultType="Category">
		select * from category where category_idx=#{category_idx}
	</select>
	
	<insert id="insert" parameterType="Category">
		insert into category(category_name) values(#{category_name})
	</insert>	
	
	<update id="update" parameterType="Category">
		update category set category_name=#{category_name}
		where category_idx=#{category_idx}
	</update>
	
	<delete id="delete" parameterType="int">
		delete from category where category_idx=#{category_idx}
	</delete>	
	
</mapper>







